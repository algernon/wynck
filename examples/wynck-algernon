(import [adderall.dsl [*]]
        [wynck.dsl [*]]
        [wynck.app [*]]
        [re])
(require wynck.app)
(require adderall.dsl)

(defn-alias [a/appᵒ] [w r]
  (prep
   (window/applicationᵒ w ?app)
   (≡ ?app (re.compile r))))

(wynck nil
       (condᵉ
        [(a/appᵒ window "xterm")
         (workspaceᵒ ?ws)
         (≡ ?ws 1)
         (window/ensureᵍ window ?ws)]))
