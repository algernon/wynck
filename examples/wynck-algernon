(import [adderall.dsl [*]]
        [wynck.dsl [*]]
        [wynck.app [*]]
        [wynck.sugar [*]]
        [re])
(require wynck.app)
(require wynck.sugar)
(require adderall.dsl)

(wynck/simple
 (?
  (=> :emacs
      (workspace 0)
      (vscreen :right)
      (activate))
  (=> :ROXTerm
      (workspace 0)
      (vscreen :right))
  (=> ".*Chromium"
      (workspace 0)
      (vscreen :right))
  (=> :Rhythmbox
      (workspace 1))
  (=> :Pidgin
      (workspace 2))
  (=> :xterm
      (workspace 0)
      (maximized))

  (=> :evolution
      (workspace 0)
      (?
       (=> ".*Evolution"
           (maximized)
           (vscreen :left))
       (=> "Compose Message"
           (unmaximized)
           (vscreen :right)
           (activate))))

  (else
   (window/applicationᵒ window ?application)
   (trace [window ?application]
          (print (.get-name ?application) "=>" (.get-name window)))
   (window/workspaceᵒ window ?workspace))))
