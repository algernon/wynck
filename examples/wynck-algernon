(import [adderall.dsl [*]]
        [wynck.dsl [*]]
        [wynck.app [*]]
        [wynck.sugar [*]]
        [re])
(require wynck.app)
(require wynck.sugar)
(require adderall.dsl)

(defreader r [s] `(re.compile ~s))

(wynck/simple
 (=> "emacs" 1)
 (=> "ROXTerm" 1)
 (=> #r".*Chromium" 4)
 (=> "Rhythmbox" 2)
 (=> "Pidgin" 3)

 (else
  (window/applicationᵒ window ?application)
  (trace [window ?application]
         (print (.get-name ?application) "=>" (.get-name window)))
  (window/workspaceᵒ window ?workspace)))
